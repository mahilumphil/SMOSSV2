        $.ajax({
            type: "POST",
            url: '/api/add/userprofile',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: itemData,
            statusCode: {
                200: function () {
                    toastr.success("Successfully Added");
                    $("#addProfile").modal('hide');
                },
                404: function () {
                    toastr.error("Bad Request");
                },
                400: function () {
                    toastr.error("Something Went Wrong");
                }
            }
        });
    }



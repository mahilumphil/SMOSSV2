
@{
    ViewBag.Title = "PostDetail";
}
<div id="divSeparator"></div>
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Detail</h1>
                    <p>Detail of Item</p>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-5">
                            <h4>Photo</h4>
                            <img src="~/img/defaultimg.png" class="img-responsive"/>
                        </div>
                        <div class="col-md-7">
                            <h4>Item</h4>
                            <input type="text" name="name" value=" " class="form-control" />
                            <h4>Specification</h4>
                            <textarea rows="7" class="form-control"></textarea>
                            <h4>Remarks</h4>
                            <textarea rows="7" class="form-control"></textarea>
                            <div class="row">
                                <div class="col-md-6">
                                    <h4>Price</h4>
                                    <input type="text" name="name" value=" " class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <h4>Quantity</h4>
                                    <input type="text" name="name" value=" " class="form-control" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <h4>Payment Type</h4>
                                    <input type="text" name="name" value=" " class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <h4>Status</h4>
                                    <input type="text" name="name" value=" " class="form-control" />
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="panel-footer">
                    <div align="right">
                        <button onclick="buyItemModal()" class="btn btn-success">Buy</button>  
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Comment</h1>
                </div>
                <div class="panel-body">
                    <textarea rows="15" class="form-control"></textarea>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Comment goes here...</h4>
                            <img src="~/img/defaultimg.png" width="50" height="55"/>Sample ....
                        </div>
                    </div> 
                </div>
                <div class="panel-footer">
                    <div align="right">
                        <button onclick="" class="btn btn-primary">Send Comment</button> 
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    ads head
                </div>
                <div class="panel-body">
                    ads body
                </div>
            </div>
        </div>
    </div>
</div>



<!--Buy Item Modal-->
<div class="modal fade" id="buyItemModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Buy <i class="fa fa-shopping-cart"></i></h4>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="modal-body">
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary btn-sm" onclick=""><i class="fa fa-check-square-o"></i> Proceed</button>
                    <button class="btn btn-warning btn-sm" id="" data-dismiss="modal"><i class="fa fa-close"></i> Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    //Buy Modal
    function buyItemModal() {
        $("#buyItemModal").modal({
            "backDrop": "static",
            "show": true
        });
    }
</script>